rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users collection - main user data
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);

      // Onboarding sub-collection
      match /onboarding/{document} {
        allow read: if isOwner(userId);
        allow create, update: if isOwner(userId);
      }

      // Chat history sub-collection
      match /chats/{chatId} {
        allow read: if isOwner(userId);
        allow create, update: if isOwner(userId);
        allow delete: if isOwner(userId);
      }

      // Tracking data sub-collection
      match /tracking/{trackingId} {
        allow read: if isOwner(userId);
        allow create, update: if isOwner(userId);
      }

      // Plans sub-collection
      match /plans/{planId} {
        allow read: if isOwner(userId);
        allow create, update: if isOwner(userId);
        allow delete: if isOwner(userId);
      }

      // ML Insights sub-collection
      match /ml_insights/{insightId} {
        allow read: if isOwner(userId);
        allow create, update: if isOwner(userId);
      }

      // Notifications sub-collection
      match /notifications/{notificationId} {
        allow read: if isOwner(userId);
        allow create, update: if isOwner(userId);
      }
    }

    // Public health data (read-only for all authenticated users)
    match /health_data/{document} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    // AI cache (read-only for all authenticated users)
    match /ai_cache/{cacheId} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    // Early adopter signups
    match /earlyAdopters/{docId} {
      allow read: if false;
      allow create: if true;  // Anyone can sign up
    }

    // Public CMS content (hero images, vision text, features)
    match /heroImages/{docId} {
      allow read: if true;
      allow write: if false;
    }

    match /visionText/{docId} {
      allow read: if true;
      allow write: if false;
    }

    match /visionFeatures/{docId} {
      allow read: if true;
      allow write: if false;
    }
  }
}